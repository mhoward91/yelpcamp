<!-- first line references boilerplate code location, individual files just fill in the body -->
<% layout("layouts/boilerplate") %>
    <div id="cluster-map" style="width: 100%; height: 500px"></div>
    <div class="container">
        <br>
        <h1>All Golf courses</h1>
        <div>
            <a href="/courses/new">Add Golf Course</a>
        </div>
        <br>
        <% for (let course of courses) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (course.images.length) { %>
                            <img class="img-fluid" alt="" src="<%=course.images[0].url%>">
                            <% } else { %>
                                <img class="img-fluid"
                                    src="https://res.cloudinary.com/dudxgdkl3/image/upload/v1661177824/YelpCamp/lcarwv79yhl89ayxo2qk.jpg"
                                    alt="">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=course.title%>
                            </h5>

                            <p class="card-text">
                                <%=course.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=course.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/courses/<%=course._id%>">View
                                <%=course.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const courses = { features: <%-JSON.stringify(courses)%>}
    </script>
    
    <script src="/javascripts/clusterMap.js"></script>