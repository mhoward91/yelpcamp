<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Golf Course</h1>
    <div class="col-6 offset-3">
        <form action="/courses/<%=course._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Name</label>
                <input class="form-control" type="text" id="title" name="course[title]"
                    value="<%=course.title %>" required>
                    <div class="valid-feedback">Good!</div> 
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="course[location]"
                    value="<%=course.location %>" required>
                    <div class="valid-feedback">Good!</div> 
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Green Fee</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="course[price]" value="<%=course.price %>" required>
                        <div class="valid-feedback">Good!</div> 
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="course[description]" required><%= course.description%></textarea>
                    <div class="valid-feedback">Good!</div> 
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add more Image(s)</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <% course.images.forEach(function(img, i) { %>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete image?</label>
                <% }) %> 
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Course</button>
            </div>
        </form>
        <a href="/courses/<%= course._id%>">Back To courses</a>

    </div>
</div>